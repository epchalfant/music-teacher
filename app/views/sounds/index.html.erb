<h1>Welcome <%= @sc_user.full_name %>!</h1>

<%= link_to image_tag('http://connect.soundcloud.com/2/btn-connect-sc-l.png'), @app_client.authorize_url  %>

<h2 id="search"><%= link_to 'Search Tracks!' %></h2>
<div id="search-tracks">
  <%= render 'search_form' %>
  <% if @results %>
    <div id="search-results">
      <%= render 'search_results', locals: {:results => @results}  %>
    </div>
  <% end %>
</div>

<h2 id="existing"><%= link_to 'Your Tracks!' %></h2>
<div id="user-tracks">
  <% @user_sounds.each do |track| %>
    <h3><%= track.title %></h3>
    <%= render 'play_button', track: track %>
  <% end %><br>
  <%= link_to "Upload a Track!", "http://www.soundcloud.com/upload-beta", target: '_blank' %>
</div>





