<li class="contact-hover">
  <h3 class="list-title light-green contact-name">
    <%= contact.full_name %>
  </h3>
  <div class="contact-toggle contact-hidden">
    <div class='contact-show'>
      <p><i class="fa fa-phone fa-lg"></i> <%= contact.phone %></p>
      <p><i class="fa fa-envelope-o fa-lg"></i> <%= contact.email %></p>
      <p><i class="fa fa-home fa-lg"></i> <%= contact.address %></p>

      <div class="contact-actions">
        <%= link_to edit_user_contact_path(contact.user, contact), :remote => true, class: 'edit-contact' do %><i class="fa fa-pencil-square-o fa-lg"></i>
        <%  end %>
        <%= link_to user_contact_path(contact.user, contact), :method => :delete, :remote => true, class: 'delete-contact' do %><i class="fa fa-times-circle fa-lg"></i><% end %>
      </div>
    </div>
  </div>
</li>
<script type="text/javascript">ContactHover.bindEvents();</script>