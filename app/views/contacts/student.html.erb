<div id="student-page">

  <div class="span-3 left student-info">
    <div class="student-info-header blue">
      <h2 class="header-title header-spacing">Your Info</h2>
    </div>
    <div class="content-panel">
      <p><i class="fa fa-user"></i> <%= @contact.full_name %></p>
      <p><i class="fa fa-phone fa-lg"></i> <%= @contact.phone %></p>
      <p><i class="fa fa-envelope-o fa-lg"></i> <%= @contact.email %></p>
      <p><i class="fa fa-home fa-lg"></i> <%= @contact.address %></p>
    </div>
  </div>

  <div class="span-9 right student-pending-assignments">
    <div class="student-pending-assignments-header orange">
      <h2 class="header-title header-spacing">Pending Assignments</h2>
    </div>
    <div class="content-panel small-scroll">
      <% @requests.each do |req| %>
        <div class="single-pending-assignment">
          <div><%= req.title %></div>
          <div><%= req.description %></div>
          <div><%= render 'assignments/new', locals: {:user => @user, :contact => @contact}, :req => req  %></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="span-3 left student-pending-payments">
    <div class="student-pending-payments-header red">
      <h2 class="header-title header-spacing">Pending Payments</h2>
    </div>
    <div class="content-panel small-scroll">
    <% @payments.each do |pay| %>
      <%= render 'payments/show', {:amount => pay.amount, :payment => pay} %>
    <% end %>
    </div>
  </div>


  <div class="span-9 right student-submission-history">
    <div class="student-submission-history-header green">
      <h2 class="header-title header-spacing">Submission History</h2>
    </div>
    <div class="content-panel small-scroll">
      <% @assignments.each do |ass| %>
        <div class="single-submitted-assignment">
          <div><%= ass.title %></div>
          <div><%= ass.description %></div>
          <div>Submitted <%= time_ago_in_words(ass.created_at) %> ago</div>
          <div><%= link_to ass.content_file_name , ass.content.url(:original, false), target: "blank" %></div>
        </div>
      <% end %>
    </div>
  </div>

</div>