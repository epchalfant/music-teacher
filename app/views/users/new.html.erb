<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @old_name %><br>
  <%= f.label :email %>
  <%= f.text_field :email, value: @old_email %><br>
  <%= label_tag :password %>
  <%= password_field_tag :password %><br>
  <%= f.submit "Create Account" %>
<% end %>