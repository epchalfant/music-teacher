<p>
  <b>Title:</b>
  <%= appointment.title %>
</p>

<p>
  <b>Description:</b>
  <%= appointment.description %>
</p>

<p>
  <b>Start time:</b>
  <%= appointment.start_time.strftime("%I:%M %p") %>
</p>

<p>
  <b>End time:</b>
  <%= appointment.end_time.strftime("%I:%M %p") %>
</p>


<%= link_to 'Edit', edit_appointment_path(appointment), class: "show-edit-form", remote: true %> |
<%= link_to 'Delete', appointment, remote: true, method: :delete,  class: "delete-appointment" %>
