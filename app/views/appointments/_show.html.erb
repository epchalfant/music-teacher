<div class="appointment">
  <div class="appointment-time">
    <div class="appointment-start">
      <%= appointment.start_time.strftime("%l:%M") %>
    </div>
    <div class="appointment-divider"><i class="fa fa-long-arrow-down"></i></div>
    <div class="appointment-end">
      <%= appointment.end_time.strftime("%l:%M") %>
    </div>
  </div>

  <div class="appointment-body">
    <div class="appointment-title">
      <%= appointment.title %>
    </div>
    <div class="appointment-description">
      <%= appointment.description %>
    </div>
  </div>

  <div class="appointment-change-box">
    <div class="appointment-edit">
      <%= link_to edit_appointment_path(appointment), class: "show-edit-form", remote: true do %>
        <i class="fa fa-pencil-square-o fa-lg"></i>
      <% end %>
    </div>
    <div class="appointment-delete">
      <%= link_to appointment, remote: true, method: :delete,  class: "delete-appointment" do %>
        <i class="fa fa-times-circle fa-lg"></i>
      <% end %>
    </div>
  </div>
</div>
